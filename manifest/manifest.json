{
  "name": "POKT Wallet",
  "version": "0.3.0",
  "description": "Secure your POKT with a modern and simple crypto wallet. It's your POKT, store it safely.",
  "homepage_url": "https://poktwallet.io",
  "author": "https://poktwallet.io",
  "manifest_version": 2,
  "default_locale": "en",
  "content_security_policy": "object-src 'self'; script-src 'self';",
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://localhost/*",
        "https://*/*"
      ],
      "js": [
        "provider-bridge.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+T",
        "mac": "Alt+Shift+T",
        "chromeos": "Alt+Shift+T",
        "linux": "Alt+Shift+T"
      }
    }
  },
  "icons": {
    "128": "icon-128-black.png"
  },
  "browser_action": {
    "default_title": "POKT Wallet",
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
    "storage",
    "unlimitedStorage",
    "activeTab"
  ]
}