{
  "name": "@sendnodes/sendwallet-monorepo",
  "private": true,
  "version": "0.4.2",
  "description": "Secure your POKT with a modern and simple crypto wallet. It's your POKT, store it safely.",
  "main": "index.js",
  "repository": "git@github.com:sendnodes/pokt-wallet.git",
  "authors": [
    "Dire <dire@sendnodes.io>",
    "BigBoss <bigboss@sendnodes.io>"
  ],
  "license": "GPL-3.0",
  "keywords": [
    "ethereum",
    "bitcoin",
    "pokt",
    "cryptocurrency",
    "wallet",
    "web3",
    "dapp"
  ],
  "pre-commit": [
    "lint:js:fix"
  ],
  "scripts": {
    "start": "WEBPACK_OUTPUT_DIR=../.. yarn workspace @sendnodes/sendwallet-webext start",
    "build": "WEBPACK_OUTPUT_DIR=../.. yarn workspace @sendnodes/sendwallet-webext build",
    "lint": "run-p lint:*",
    "lint-fix": "run-p lint:*:fix",
    "lint:config": "prettier -c '**/*.@(json|yaml|toml)'",
    "lint:config:fix": "prettier -w '**/*.@(json|yaml|toml)'",
    "lint:docs": "prettier -c '**/*.md'",
    "lint:docs:fix": "prettier -w '**/*.md'",
    "lint:js": "yarn run rome ci .",
    "lint:js:fix": "yarn run rome format . --write && yarn run rome check . --apply",
    "test": "jest",
    "postinstall": "patch-package"
  },
  "workspaces": [
    "apps/**",
    "packages/**"
  ],
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.3.1",
    "jest": "^29.3.1",
    "jest-chrome": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "pre-commit": "^1.2.2",
    "prettier": "^2.5.1",
    "process": "^0.11.10",
    "rome": "^11.0.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": "16"
  },
  "packageManager": "yarn@3.3.0",
}
