  "license": "GPL-3.0",
  "keywords": [
    "ethereum",
    "bitcoin",
    "pokt",
    "cryptocurrency",
    "wallet",
    "web3",
    "dapp"
  ],
  "scripts": {
    "webext:watch": "WEBPACK_OUTPUT_DIR=../.. yarn workspace webext run watch",
    "legacy:watch": "WEBPACK_OUTPUT_DIR=../.. yarn workspace webext-legacy run start",
    "legacy:build": "WEBPACK_OUTPUT_DIR=../.. yarn workspace webext-legacy run build",
    "lint": "run-p 'lint:*'",
    "lint-fix": "run-p 'lint:*:fix'",
    "lint:config": "prettier -c '**/*.@(json|yaml|toml)'",
    "lint:config:fix": "prettier -w '**/*.@(json|yaml|toml)'",
    "lint:docs": "prettier -c '**/*.md'",
    "lint:docs:fix": "prettier -w '**/*.md'",
    "lint:js": "rome ci .",
    "lint:js:fix": "rome format . --write && rome check . --apply",
    "test": "jest",
    "postinstall": "is-ci || husky install"
  },
  "workspaces": [
    "apps/**",
    "packages/**"
  ],
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@jest/globals": "^29.3.1",
    "@manypkg/cli": "^0.19.2",
    "husky": "^8.0.0",
    "is-ci": "^3.0.1",
    "jest": "^29.3.1",
    "jest-chrome": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.1",
    "process": "^0.11.10",
    "rome": "^11.0.0",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": "16"
  },
  "packageManager": "yarn@3.3.0",
  "resolutions": {
    "jsan@^3.1.13": "patch:jsan@npm%3A3.1.13#./.yarn/patches/jsan-npm-3.1.13-376d4a9e3f.patch",
    "jsan@^3.1.3": "patch:jsan@npm%3A3.1.13#./.yarn/patches/jsan-npm-3.1.13-376d4a9e3f.patch",
    "@react-navigation/native": "patch:@react-navigation/native@npm%3A6.1.1#./.yarn/patches/@react-navigation-native-npm-6.1.1-dff59abc78.patch"
