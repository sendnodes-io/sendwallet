{
  "name": "@sendnodes/sendwallet-monorepo",
  "private": true,
  "version": "0.4.2",
  "description": "Secure your POKT with a modern and simple crypto wallet. It's your POKT, store it safely.",
  "main": "index.js",
  "repository": "git@github.com:sendnodes/pokt-wallet.git",
  "authors": [
    "Dire <dire@sendnodes.io>",
    "BigBoss <bigboss@sendnodes.io>"
  ],
  "license": "GPL-3.0",
  "keywords": [
    "ethereum",
    "bitcoin",
    "pokt",
    "cryptocurrency",
    "wallet",
    "web3",
    "dapp"
  ],
  "scripts": {
    "start": "WEBPACK_OUTPUT_DIR=../.. yarn workspace @sendnodes/sendwallet-webext start",
    "build": "WEBPACK_OUTPUT_DIR=../.. yarn workspace @sendnodes/sendwallet-webext build",
    "lint": "run-p lint:*",
    "lint-fix": "run-p lint:*:fix",
    "lint:config": "prettier -c '**/*.@(json|yaml|toml)'",
    "lint:config:fix": "prettier -w '**/*.@(json|yaml|toml)'",
    "lint:docs": "prettier -c '**/*.md'",
    "lint:docs:fix": "prettier -w '**/*.md'",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "test": "jest",
    "postinstall": "patch-package"
  },
  "workspaces": [
    "apps/**",
    "packages/**"
  ],
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.15.0",
    "@jest/types": "^28.1.1",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.2.2",
    "jest-chrome": "^0.7.2",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "prettier": "^2.5.1",
    "process": "^0.11.10",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": "16"
