{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentSize": 2
  },
  "files": {
    "ignore": [
      "dist",
      ".tamagui",
      "json-validators.js",
      "jtd-validators.js",
      "webext-legacy",
      "ui-legacy",
      "background"
    ]
  }
}
