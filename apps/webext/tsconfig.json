{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "../..",
    "rootDir": "../..",
    "target": "esnext",
    "lib": ["esnext", "DOM", "DOM.Iterable", "WebWorker"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "paths": {
      "react-native": ["react-native-web"]
    }
  },
  "include": [
    "src",
    "webext-env.d.ts",
    "webpack.config.ts",
    "../../packages/app",
    "../../packages/ui",
    "../../packages/background",
    "../../packages/provider-bridge"
  ],
  "exclude": [
    "node_modules",
    "node_modules/**",
    "../../node_modules/@sendnodes",
    "../../node_modules/@sendnodes/**",
    "dist",
    "../../packages/background/jest*",
    "../../packages/background/tests",
    "../../packages/ui-legacy"
  ]
}
